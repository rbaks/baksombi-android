<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="?gradientColor"
        android:layout_height="wrap_content">

        <!--ImageVIew to display our Course Image-->
        <!--Text View to display Course Name-->

        <!--Text VIew to display COurse Rating-->
        <!--Image used in present in drawable folder-->
        <TextView
            android:id="@+id/lbl_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:drawablePadding="2dp"
            android:fontFamily="@font/roboto_bold"
            android:text="chiens"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#F1F1F1" />

        <TextView
            android:id="@+id/lbl_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_category_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="20% terminÃ©"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#F6F5F5" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_progress"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:outlineSpotShadowColor="@color/white"
            android:progress="50"
            app:indicatorColor="?colorSecondary"
            app:trackColor="@color/white"
            app:trackCornerRadius="10dp"
            app:trackThickness="10dp" />

        <ImageView
            android:id="@+id/idIVCourseImage"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/mini_dog" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>